<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_menu_page">
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="main_menu_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/dark_blue</item>
        <item name="iconPadding">10dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="settings_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="page_title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <style name="page_back_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:src">@drawable/arrow_back</item>
    </style>

    <style name="page_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="track_title">
        <item name="android:layout_width">@dimen/track_info_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/track_info_width</item>
    </style>

    <style name="track_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_11</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxWidth">@dimen/track_info_width_half</item>
    </style>

</resources>