<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/page_title_layout"
        android:paddingBottom="40dp">

        <ImageView android:id="@+id/settings_back"
            style="@style/page_back_image"/>

        <TextView style="@style/page_title"
            android:text="@string/settings"/>
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat android:id="@+id/dark_theme"
        style="@style/settings_menu_item"
        android:text="@string/dark_theme" />

    <TextView android:id="@+id/share"
        style="@style/settings_menu_item"
        android:text="@string/share"
        app:drawableEndCompat="@drawable/share"/>

    <TextView android:id="@+id/support"
        style="@style/settings_menu_item"
        android:text="@string/support"
        app:drawableEndCompat="@drawable/support"/>

    <TextView android:id="@+id/user_agreement"
        style="@style/settings_menu_item"
        android:text="@string/user_agreement"
        app:drawableEndCompat="@drawable/arrow_forward"/>

</LinearLayout>